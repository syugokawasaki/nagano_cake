<h3>配送先登録/一覧</h3>

<%= form_with model: @address, url: addresses_path, local:true do |f| %>

<label>郵便番号(ハイフンなし)</label><%= f.text_field :postal_code %></br>
<label>住所</label><%= f.text_field :address %></br>
<label>宛名</label><%= f.text_field :name %></br>
<%= f.submit '新規登録'%>

<table>
  <tr>
    <td>郵便番号</td>
    <td>住所</td>
    <td>宛名</td>
    <td></td>
  </tr>
  <tr>
    <% @addresses.each do |f| %>
    <td><%= f.postal_code %></td>
    <td><%= f.address %></td>
    <td><%= f.name %></td>
    <td><%= link_to '編集する', edit_address_path(f) %> <%= link_to '削除する', address_path(f), method: :delete %></td>
  </tr>
    <% end %>
</table>


<% end %>