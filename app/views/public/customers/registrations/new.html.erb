<h3>新規会員登録</h3>
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <label>名前 (姓)</label><%= f.text_field :last_name %><label>(名)</label><%= f.text_field :first_name %>
  </div>

  <div class="field">
    <label>フリガナ (セイ)</label><%= f.text_field :last_name_kana %><label>(メイ)</label><%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <label>郵便番号(ハイフンなし)</label><%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <label>住所</label><%= f.text_field :address %>
  </div>

  <div class="field">
    <label>電話番号(ハイフンなし)</label><%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/customers/shared/links" %>

  
