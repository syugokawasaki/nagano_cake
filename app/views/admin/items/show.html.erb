<h1>商品詳細ページ</h1>


<table>
  <thead>
    <tr>
      <th>商品画像</th>
      <th>商品名</th>
      <th>ジャンル</th>
      <th>商品説明文</th>
      <th>価格</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %></td>
      <td><%= @item.name %></td>
      <td><%= @item.genre.name %></td>
      <td><%= @item.introduction %></td>
      <td><%= @item.price %>円</td>
      <td><%= link_to '編集', edit_admin_item_path(@item) %></td>
    </tr>
  </tbody>
</table>

