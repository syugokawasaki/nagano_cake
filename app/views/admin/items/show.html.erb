<div class="container">
  <h1>商品詳細ページ</h1>
  <div class="row p-4">
    <div class="col-lg-3 col-md-5 col-xl-3">
      <%= attachment_image_tag @item, :image, :fill, 250, 150, format: 'jpeg' %>
    </div>
    <div class="col-4">
      <table>
        <tr><th>商品名</th><td><%= @item.name %></td></tr>
        <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
        <tr><th>商品説明文</th><td><%= @item.introduction %></td></tr>
        <tr><th>価格</th><td><%= @item.price %>円</td></tr>
      </table>
        <%= link_to '編集', edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>



